<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FormActivity">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Form Pendaftaran"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Masukkan Nama Lengkap"
        android:inputType="textPersonName"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etNomorHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Masukkan Nomer HP"
        android:inputType="phone"
        android:padding="12dp" />

    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Masukkan Alamat Lengkap"
        android:inputType="textPostalAddress"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Jenis Kelamin:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <RadioGroup
        android:id="@+id/rgJenisKelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbPerempuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perempuan"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/rbLakiLaki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Laki-laki"
            android:padding="8dp" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Agama:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <Spinner
        android:id="@+id/spinnerAgama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:minHeight="48dp"
        android:prompt="@string/pilih_agama"
        android:entries="@array/daftar_agama"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hobi:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <CheckBox
        android:id="@+id/cbMembaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membaca"
        android:padding="8dp" />

    <CheckBox
        android:id="@+id/cbMenanam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menanam"
        android:padding="8dp" />

    <CheckBox
        android:id="@+id/cbBerandai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berandai"
        android:padding="8dp" />

    <CheckBox
        android:id="@+id/cbTidur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidur"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2196F3"
        android:text="Simpan"
        android:textColor="#FFFFFF" />

</LinearLayout>